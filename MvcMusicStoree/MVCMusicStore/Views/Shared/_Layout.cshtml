
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")"
          rel="stylesheet"
          type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")"
            type="text/javascript"></script>
</head>
<body>
    <div id="header">
        <h1><a href="/">ASP.NET MVC MUSIC STORE</a></h1>
        <ul id="navlist">
            <li class="first">

                <a  href="@Url.Content("/Home/")" id="current"> Home</a>
            </li>

            <li><a href="@Url.Content("~/Store/Browse/1")">Store</a></li>

            @*<li>@{await Html.RenderPartialAsync("~/Views/ShoppingCart/CartSummary.cshtml");}</li>*@

            <li> <a href="@Url.Content("~/ShoppingCart/")" id="deneme42">Cart</a></li>

            
            <li><a href="@Url.Content("~/Genres/")">Genre</a></li>
            <li><a href="@Url.Content("~/Artists/")">Artist</a></li>
            <li><a href="@Url.Content("~/Albums/")">Album</a></li>


            <li><a href="@Url.Content("~/StoreManager/")"> Admin</a></li>

        </ul>
    </div>


    @{ Html.RenderPartialAsync("~/Views/Store/GenreMenu.cshtml");}


    <div id="main">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
    <div id="footer">
        built with <a href="http://asp.net/mvc">ASP.NET MVC 3</a>
    </div>

    <script>
                       $(document).ready(function() {
                var options = {};
                options.url = "/ShoppingCart/CartSummary";
                options.type = "GET";
                options.dataType = "json";
                options.contentType = "application/json";
                options.success = function(data) {
                    $('#deneme42').text('Cart (' + data + ')');
                }
                options.error = function() {  $('#deneme42').text('Cart (0)'); };
                $.ajax(options);

        });

    </script>


</body>
</html>

